# n8n Environment Variables for Render Deployment

# Basic Configuration
NODE_ENV=production
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_HOST=your-app-name.onrender.com

# Authentication
N8N_USER_MANAGEMENT_DISABLED=false
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password

# Security
N8N_ENCRYPTION_KEY=your-32-character-encryption-key

# Database
DB_TYPE=sqlite
DB_SQLITE_VACUUM_ON_STARTUP=true

# Webhooks
WEBHOOK_URL=https://your-app-name.onrender.com

# Localization
GENERIC_TIMEZONE=Europe/Berlin

# Logging
N8N_LOG_LEVEL=info

# Features
N8N_DIAGNOSTICS_ENABLED=false
N8N_PAYLOAD_SIZE_MAX=16
N8N_EDITOR_BASE_URL=https://your-app-name.onrender.com

# Optional: External Database (PostgreSQL)
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=your-postgres-host
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=your-db-user
# DB_POSTGRESDB_PASSWORD=your-db-password

# Optional: Redis for Queue Management
# QUEUE_BULL_REDIS_HOST=your-redis-host
# QUEUE_BULL_REDIS_PORT=6379
# QUEUE_BULL_REDIS_PASSWORD=your-redis-password
